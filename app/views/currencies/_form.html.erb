<%= simple_form_for(@currency,  html: { remote: true }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
   
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :formula %>
    <%= f.label :last_currency %>
    <%= f.text_field  :last_currency, class: "form-control" %>
    <%= f.label :date_currency %>
    <%= f.text_field :date_currency,  class: "form-control string" %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
         <%= f.button :submit, class: "btn btn-success pull-right" %>
      </div>
   
  </div>
<% end %>

<%= javascript_pack_tag('libs/flatpicker') %>